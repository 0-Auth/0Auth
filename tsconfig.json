{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["es5", "es2015", "dom"],
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib",
    "paths": {
      "@0auth/*": ["packages/*/src"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules/*", "lib/*", "**/*.spec.ts"]
}
