{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@0auth/*": ["packages/*/src"]
    },
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules/*", "**/lib/*", "**/*.spec.ts"]
}
